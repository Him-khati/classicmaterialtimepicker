<resources>

	<style name="CmtpViewTheme">
		<item name="cmtpTextFrameColor">@color/cmtp_indigo</item>
		<item name="cmtpTextFrameWidth">1dp</item>
		<item name="cmtpTextFrameCornerRadius">8dp</item>

		<item name="cmtpTextSize">16sp</item>
		<item name="cmtpTextColor">@color/cmtp_black</item>
	</style>

	<style name="CmtpViewTheme.TextFrame" parent="CmtpViewTheme" />

	<style name="CmtpViewTheme.Text" parent="CmtpViewTheme" />

	<!-- Dialog -->

	<style name="CmtpDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
		<item name="cmtpDialogFrameStyle">@style/CmtpDialogFrameStyle</item>
		<item name="cmtpDialogFrameBackgroundColor">@color/cmtp_white</item>
		<item name="cmtpDialogFrameCornerRadius">16dp</item>

		<item name="buttonBarPositiveButtonStyle">@style/CmtpDialogPositiveButtonStyle</item>
		<item name="buttonBarNegativeButtonStyle">@style/CmtpDialogNegativeButtonStyle</item>
	</style>

	<style name="CmtpDialogFrameStyle" parent="CmtpDialogTheme" />

	<style name="CmtpDialogPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
		<item name="android:textColor">@color/cmtp_indigo</item>
	</style>

	<style name="CmtpDialogNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
		<item name="android:textColor">@color/cmtp_gray</item>
	</style>

</resources>
